<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberPickerHour">
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textColorPrimary">#3CA1FF</item>
        <item name="android:textColorSecondary">#5C5C5C</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="btnMeridiem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="btnWeekdays">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/border_circle</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:backgroundTint">@color/offColorCircle</item>
        <item name="android:minWidth">1dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:paddingHorizontal">13dp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:textColor">@color/offColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="viewLine">
        <item name="android:background">@drawable/line</item>
        <item name="android:backgroundTint">#3E3E3E</item>
        <item name="android:layout_height">2dp</item>
    </style>
</resources>